!!! 5
html(lang="en")
  head
    title Catan game setup
    link(href="/stylesheets/style.css", media="screen", rel="stylesheet", type="text/css")
  body
    #wrapper
      h1 Game #
        span= game_id 
        span &nbsp;is being set up.
      #players
        - each player in players
          .player
            - if(player.name)
              img(src='#{player.icon}')
              h2= player.name
              p= player.status
            - else
              input(type='text', value='name')
              a.join(href='#') Join
      #invite
        - if(url)
          hgroup
            h4 To invite someone to this game, send them the link:
            h5
              a(href=url)= url
